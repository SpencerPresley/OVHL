{
  "components": {
    "alert": {
      "description": "Displays a callout for user attention.",
      "variants": ["default", "destructive"],
      "props": {
        "variant": "string (optional)",
        "className": "string (optional)"
      }
    },
    "alert-dialog": {
      "description": "A modal dialog that interrupts the user with important content and expects a response.",
      "parts": ["trigger", "content", "header", "footer", "title", "description", "cancel", "action"],
      "props": {
        "open": "boolean (optional)",
        "onOpenChange": "function (optional)"
      }
    },
    "button": {
      "description": "Displays a button or a component that looks like a button.",
      "variants": {
        "variant": ["default", "destructive", "outline", "secondary", "ghost", "link"],
        "size": ["default", "sm", "lg", "icon"]
      },
      "props": {
        "variant": "string (optional)",
        "size": "string (optional)",
        "asChild": "boolean (optional)"
      }
    },
    "card": {
      "description": "Displays a card with header, content, and footer.",
      "parts": ["root", "header", "content", "footer", "title", "description"],
      "props": {
        "className": "string (optional)",
        "asChild": "boolean (optional)"
      }
    },
    "form": {
      "description": "Building forms with React Hook Form.",
      "parts": ["root", "field", "control", "item", "label", "message"],
      "props": {
        "control": "Control (required)",
        "name": "string (required)",
        "render": "function (required)"
      }
    },
    "input": {
      "description": "Displays a form input field.",
      "props": {
        "type": "string (optional)",
        "disabled": "boolean (optional)",
        "className": "string (optional)"
      }
    },
    "label": {
      "description": "Renders an accessible label associated with controls.",
      "props": {
        "htmlFor": "string (optional)",
        "className": "string (optional)"
      }
    },
    "toast": {
      "description": "A succinct message that is displayed temporarily.",
      "variants": ["default", "destructive"],
      "props": {
        "variant": "string (optional)",
        "duration": "number (optional)",
        "className": "string (optional)"
      }
    },
    "toaster": {
      "description": "The toast container that handles multiple toasts.",
      "usage": "import { Toaster } from '@/components/ui/toaster'",
      "props": {}
    },
    "dialog": {
      "description": "A window overlaid on either the primary window or another dialog window.",
      "parts": ["trigger", "content", "header", "footer", "title", "description"],
      "props": {
        "open": "boolean (optional)",
        "onOpenChange": "function (optional)"
      }
    },
    "dropdown-menu": {
      "description": "Displays a menu to the user — such as a set of actions or functions.",
      "parts": ["trigger", "content", "item", "separator", "label"],
      "props": {
        "open": "boolean (optional)",
        "onOpenChange": "function (optional)"
      }
    },
    "hover-card": {
      "description": "For sighted users to preview content available behind a link.",
      "parts": ["trigger", "content"],
      "props": {
        "open": "boolean (optional)",
        "onOpenChange": "function (optional)"
      }
    },
    "progress": {
      "description": "Displays an indicator showing the completion progress of a task.",
      "props": {
        "value": "number (optional)",
        "max": "number (optional)",
        "className": "string (optional)"
      }
    },
    "select": {
      "description": "Displays a list of options for the user to pick from—triggered by a button.",
      "parts": ["trigger", "content", "item", "separator", "label"],
      "props": {
        "value": "string (optional)",
        "onValueChange": "function (optional)",
        "defaultValue": "string (optional)"
      }
    },
    "separator": {
      "description": "A visual divider between content.",
      "props": {
        "orientation": "horizontal | vertical (optional)",
        "className": "string (optional)"
      }
    },
    "sheet": {
      "description": "Extends the Dialog component to display content that complements the main content of the screen.",
      "parts": ["trigger", "content", "header", "footer", "title", "description"],
      "props": {
        "side": "top | right | bottom | left (optional)",
        "open": "boolean (optional)",
        "onOpenChange": "function (optional)"
      }
    },
    "tabs": {
      "description": "A set of layered sections of content—known as tab panels—that display one panel of content at a time.",
      "parts": ["root", "list", "trigger", "content"],
      "props": {
        "defaultValue": "string (optional)",
        "value": "string (optional)",
        "onValueChange": "function (optional)"
      }
    }
  },
  "installation": {
    "command": "npx shadcn@latest add [component]",
    "example": "npx shadcn@latest add button"
  },
  "themes": {
    "default": "Default theme with neutral colors",
    "new-york": "New York theme with more contrast"
  }
} 
